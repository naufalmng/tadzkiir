<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:scrollbarThumbVertical="@null"
    android:scrollbarTrackVertical="@null"
    android:background="@color/abuF7_light_night"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.jadwal_shalat.JadwalShalatFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/abuF7_light_night"
        android:paddingBottom="20dp"
        android:orientation="vertical">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/biru59"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qiblat"
                android:textSize="15sp"
                android:fontFamily="@font/inter_medium"
                android:textColor="@color/white"/>

        </com.google.android.material.appbar.MaterialToolbar>

        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include
                    layout="@layout/shimmer_placeholder_item_jadwal_shalat"/>
            </androidx.appcompat.widget.LinearLayoutCompat>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mainLayout">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTanggal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11 April 2022"
                android:fontFamily="@font/inter_medium"
                android:textSize="14sp"
                android:textColor="@color/light_night_color"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnQiblat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_rectangle_20r"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:backgroundTint="#434343"
                android:text="Kiblat"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_medium"
                android:textSize="13sp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:drawableStartCompat="@drawable/ic_location"
                app:layout_constraintTop_toBottomOf="@id/tvTanggal"
                app:layout_constraintStart_toStartOf="@id/tvTanggal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_regular"
                android:textSize="12sp"
                android:textColor="@color/light_night_color"
                android:drawablePadding="5dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/checkLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/white"
                app:cornerRadius="10dp"
                app:backgroundTint="#434343"
                android:text="@string/temukan_lokasi"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="@id/tvLocation"
                app:layout_constraintTop_toBottomOf="@id/tvLocation"/>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/biruC8"
                android:translationZ="1dp"
                app:cardCornerRadius="11dp"
                android:elevation="0dp"
                app:cardElevation="0dp"
                android:layout_margin="16dp"
                app:layout_constraintTop_toBottomOf="@id/checkLocation"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <include
                    android:id="@+id/jadwalShalat"
                    layout="@layout/item_jadwal_shalat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/checkLocation"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>


</ScrollView>