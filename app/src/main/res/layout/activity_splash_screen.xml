<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/biru59"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/garis"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_line_pattern"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/tasbih"
        android:layout_width="152dp"
        android:layout_height="152dp"
        android:layout_marginStart="35dp"
        app:layout_constraintDimensionRatio="1:1"
        android:src="@drawable/ic_tasbih_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toStartOf="@id/tadzkiir"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tadzkiir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        android:layout_marginEnd="30dp"
        android:text="@string/tadzkiir"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tasbih"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>