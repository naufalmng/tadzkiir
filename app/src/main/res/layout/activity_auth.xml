<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:elevation="0dp"
    tools:context=".ui.auth.AuthActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/biru59"
        android:elevation="0dp"
        app:elevation="0dp"
        android:orientation="vertical"
        android:theme="@style/Theme.Tadzkiir.AppBarOverlay">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp"
            android:paddingTop="@dimen/_15sdp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tasbih"
                android:layout_width="@dimen/_97sdp"
                android:layout_height="@dimen/_97sdp"
                android:scaleType="fitEnd"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:tint="@color/light_night_color"
                android:src="@drawable/ic_tasbih_icon" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tadzkiir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_regular"
                android:text="@string/tadzkiir"
                android:layout_weight="1"
                android:textColor="@color/light_night_color"
                android:textSize="@dimen/_19ssp"
                app:layout_constraintStart_toEndOf="@id/tasbih"
                app:layout_constraintBottom_toBottomOf="@+id/tasbih"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tasbih"/>
        </androidx.appcompat.widget.LinearLayoutCompat>


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs"
            android:theme="@style/tabAuth"
            android:layout_gravity="bottom"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:paddingTop="30dp"
            app:tabGravity="center"
            android:background="@drawable/sp_rectangle_radius_top_20"
            app:tabTextColor="@color/light_night_color"
            app:tabSelectedTextColor="@color/light_night_color"
            app:tabIndicatorColor="@color/biru59"
            app:tabIndicatorFullWidth="true"
            app:tabRippleColor="@color/biru59"
            app:tabMinWidth="126dp"
            app:tabIndicatorAnimationMode="fade"
            app:tabUnboundedRipple="true"
            app:tabMode="scrollable"
            android:elevation="0dp"
            app:elevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.appbar.AppBarLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@id/viewPager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:elevation="0dp"
        android:background="@color/abuF7_light_night"
        app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"/>



</androidx.coordinatorlayout.widget.CoordinatorLayout>